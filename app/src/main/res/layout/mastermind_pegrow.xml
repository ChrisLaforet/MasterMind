<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/peg_row"
        style="@style/Widget.Theme.MasterMind.ButtonBar.Fullscreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        >

    <EditText
            android:id="@+id/row_number"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#1A000000"
            android:clickable="false"
            android:cursorVisible="false"
            android:ems="4"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:shadowColor="@color/white"
            android:shadowDx="1"
            android:shadowDy="2"
            android:shadowRadius="0.6"
            android:text="#"
            android:textAlignment="center"
            android:textColor="@color/gray_600"
            android:textSize="24sp"
            android:textStyle="bold" />

    <com.chrislaforetsoftware.mm.board.MastermindPegHole
            android:id="@+id/peg_0"
            android:layout_width="50dp"
            android:layout_height = "50dp"
            />

    <com.chrislaforetsoftware.mm.board.MastermindPegHole
            android:id="@+id/peg_1"
            android:layout_width="50dp"
            android:layout_height = "50dp"
            />

    <com.chrislaforetsoftware.mm.board.MastermindPegHole
            android:id="@+id/peg_2"
            android:layout_width="50dp"
            android:layout_height = "50dp"
            />

    <com.chrislaforetsoftware.mm.board.MastermindPegHole
            android:id="@+id/peg_3"
            android:layout_width="50dp"
            android:layout_height = "50dp"
            />

    <com.chrislaforetsoftware.mm.board.MastermindPegHole
            android:id="@+id/peg_4"
            android:layout_width="50dp"
            android:layout_height = "50dp"
            />

    <com.chrislaforetsoftware.mm.board.MastermindPegHole
            android:id="@+id/peg_5"
            android:layout_width="50dp"
            android:layout_height = "50dp"
            android:text="0"
            android:textAlignment="center"
            />

    <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
             />

    <Button
            android:id="@+id/row_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="- - - -"
            android:clickable="false"
            android:layout_weight="1"
            />

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/black_count"
            android:text="0"
            android:background="@color/black"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_weight="1"
            android:textSize="24sp"
            android:textStyle="bold"
            android:visibility="gone"
            />

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/white_count"
            android:text="0"
            android:background="@color/white"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_weight="1"
            android:textSize="24sp"
            android:textStyle="bold"
            android:visibility="gone"
            />
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/peg_row"
        style="@style/Widget.Theme.MasterMind.ButtonBar.Fullscreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:weightSum="100"
        >

    <com.chrislaforetsoftware.mm.board.RowHeader
            android:id="@+id/row_number"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            />

    <LinearLayout
            android:id="@+id/pegs"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="70"
            android:weightSum="6"
            android:orientation="horizontal">

        <com.chrislaforetsoftware.mm.board.MastermindPegHole
                android:id="@+id/peg_0"
                android:layout_width="200dp"
                android:layout_height = "200dp"
                android:layout_weight="1"
                android:contentDescription="@string/first_peg"
                />

        <com.chrislaforetsoftware.mm.board.MastermindPegHole
                android:id="@+id/peg_1"
                android:layout_width="200dp"
                android:layout_height = "200dp"
                android:layout_weight="1"
                android:contentDescription="@string/second_peg"
                />

        <com.chrislaforetsoftware.mm.board.MastermindPegHole
                android:id="@+id/peg_2"
                android:layout_width="200dp"
                android:layout_height = "200dp"
                android:layout_weight="1"
                android:contentDescription="@string/third_peg"
                />

        <com.chrislaforetsoftware.mm.board.MastermindPegHole
                android:id="@+id/peg_3"
                android:layout_width="200dp"
                android:layout_height = "200dp"
                android:layout_weight="1"
                android:contentDescription="@string/fourth_peg"
                />

        <com.chrislaforetsoftware.mm.board.MastermindPegHole
                android:id="@+id/peg_4"
                android:layout_width="200dp"
                android:layout_height = "200dp"
                android:layout_weight="1"
                android:contentDescription="@string/fifth_peg"
                />

        <com.chrislaforetsoftware.mm.board.MastermindPegHole
                android:id="@+id/peg_5"
                android:layout_width="200dp"
                android:layout_height = "200dp"
                android:layout_weight="1"
                android:contentDescription="@string/sixth_peg"
                />
    </LinearLayout>

    <LinearLayout
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:weightSum="5"
            android:orientation="horizontal">

        <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                />

        <Button
                android:id="@+id/row_done"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- - - - -"
                android:clickable="false"
                android:layout_weight="4"
                android:layout_gravity="center_vertical"
                android:contentDescription="@string/check_my_guess"
                />

        <EditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/black_count"
                android:text="0"
                android:background="@color/black"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:layout_weight="2"
                android:textSize="24sp"
                android:textStyle="bold"
                android:visibility="gone"
                android:layout_gravity="center"
                android:contentDescription="@string/black_correct"
                />

        <EditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/white_count"
                android:text="0"
                android:background="@color/white"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:layout_weight="2"
                android:textSize="24sp"
                android:textStyle="bold"
                android:visibility="gone"
                android:layout_gravity="center_vertical"
                android:contentDescription="@string/white_correct"
                />

    </LinearLayout>
</LinearLayout>

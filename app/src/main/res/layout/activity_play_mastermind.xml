                android:layout_weight="8" />

        <com.chrislaforetsoftware.mm.board.MastermindPegRow
                android:id="@+id/peg_row_0"
                android:layout_height="50dp"
                android:layout_width="match_parent"
                android:layout_weight="8" />

    </LinearLayout>
</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/peg_row"
        style="@style/Widget.Theme.MasterMind.CodeBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/black"
        android:weightSum="100"
        >

    <com.chrislaforetsoftware.mm.board.RowHeader
        android:id="@+id/row_number"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_weight="10"
        android:background="@color/black"
        />

    <LinearLayout
            android:id="@+id/pegs"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="70"
            android:weightSum="6"
            android:background="#cc444444"
            android:orientation="horizontal">

        <com.chrislaforetsoftware.mm.board.MastermindPegHole
                android:id="@+id/peg_0"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:contentDescription="@string/first_peg"
                />

        <com.chrislaforetsoftware.mm.board.MastermindPegHole
                android:id="@+id/peg_1"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:contentDescription="@string/second_peg"
                />

        <com.chrislaforetsoftware.mm.board.MastermindPegHole
                android:id="@+id/peg_2"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:contentDescription="@string/third_peg"
                />

        <com.chrislaforetsoftware.mm.board.MastermindPegHole
                android:id="@+id/peg_3"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:contentDescription="@string/fourth_peg"
                />

        <com.chrislaforetsoftware.mm.board.MastermindPegHole
                android:id="@+id/peg_4"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:contentDescription="@string/fifth_peg"
                />

        <com.chrislaforetsoftware.mm.board.MastermindPegHole
                android:id="@+id/peg_5"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:contentDescription="@string/sixth_peg"
                />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="20"
        android:weightSum="5"
        android:orientation="horizontal">

        <Button
            android:id="@+id/hint_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/show_hint"
            android:background="@color/black"
            android:textColor="@color/white"
            />
    </LinearLayout>

</LinearLayout>
